{
    "version": 2,
    "builds": [
        {
            "src": "portfolio/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.9"
            }
        },
        {
            "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "productionfiles"  
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/productionfiles/$1"  
        },
        {
            "src": "/(.*)",
            "dest": "portfolio/wsgi.py"  
        }
    ]
}
